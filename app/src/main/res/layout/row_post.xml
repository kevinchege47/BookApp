<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:padding="5dp">
    <ImageButton
        android:id="@+id/moreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        app:tint="@color/black"
        android:src="@drawable/navigate_next_24"
        android:layout_alignParentEnd="true"/>
<!--    Post Title-->
    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@id/moreBtn"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Title of Post"/>
    <TextView
        android:id="@+id/publishInfoTv"
        android:layout_width="match_parent"
        android:layout_below="@id/titleTv"
        android:layout_toStartOf="@id/moreBtn"
        android:text="By Kevin Chege October 25,2023"
        android:textColor="#939292"
        android:layout_height="wrap_content"/>
    
<!--    Post Image-->
    <ImageView
        android:id="@+id/imageIv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/publishInfoTv"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:adjustViewBounds="true"
        android:background="@color/gray2"
        android:src="@drawable/baseline_image_24"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/descriptionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/publishInfoTv"
        android:layout_marginTop="5dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:text="The dsdfghedrftgyhuedrftgyhuidrfgyhifghjkfghjkdfghjdfghjfghjfrghjkfghjdcfncfghjcfghjfghjfghjcfghjkcfghjkcfghjcghjkcbnmchjcvbnmcvncvbncvbncvbncvbnmfghjkdfghjkfghdfgh"
        android:layout_toStartOf="@id/moreBtn"
        android:layout_toEndOf="@id/imageIv"
        android:textColor="@color/black"/>

</RelativeLayout>